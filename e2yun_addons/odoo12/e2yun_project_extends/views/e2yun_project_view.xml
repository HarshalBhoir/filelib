                        <!--</group>-->
                        <!--<group>-->
                            <!--<field name="weight" attrs="{'invisible': [('questionnaire_scenario', '=', 'Other')]}"/>-->
                            <!--<field name="weightt" attrs="{'invisible': ['|',('multiple_questionnaires', '=', 'no'),('questionnaire_scenarioo', '=', 'Other')]}"/>-->
                            <!--<field name="weighttt" attrs="{'invisible': ['|',('multiple_questionnaires', '=', 'no'),('questionnaire_scenariooo', '=', 'Other')]}"/>-->
                        <!--</group>-->
                        <!--<group>-->
                            <!--<field name="survey_temp_id"/>-->
                            <!--<field name="survey_temp_idd" attrs="{'invisible': [('multiple_questionnaires', '=', 'no')]}"/>-->
                            <!--<field name="survey_temp_iddd" attrs="{'invisible': [('multiple_questionnaires', '=', 'no')]}"/>-->
                        <!--</group>-->
                    <!--</group>-->
                    <field name="questionnaire_ids" widget="one2many_list" context="{'questionnaire_ids': questionnaire_ids}">
                        <tree editable="bottom">
                            <field name="questionnaire_scenario"/>
                            <field name="weight"/>
                            <field name="survey_temp_id"/>
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="questionnaire_scenario"/>
                                    <field name="weight"/>
                                    <field name="survey_temp_id"/>
