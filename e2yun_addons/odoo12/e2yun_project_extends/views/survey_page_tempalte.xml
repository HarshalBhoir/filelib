<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <template id="pagee" name="Pagee" inherit_id="survey.page">
        <xpath expr="//div[@class='js_question-wrapper']" position="replace">
            <h2>
                <span t-field='question.question' />
                <span t-if="question.constr_mandatory" class="text-danger">*</span>
            </h2>
            <div t-field='question.description' class="text-muted oe_no_empty"/>
            <t t-if="question.type_id.name == '多行文本框'"><t t-call="survey.free_text"/></t>
            <t t-if="question.type_id.name == '单行文本框'"><t t-call="survey.textbox"/></t>
            <t t-if="question.type_id.name == '数值'"><t t-call="survey.numerical_box"/></t>
            <t t-if="question.type_id.name == '日期'"><t t-call="survey.date"/></t>
            <t t-if="question.type_id.name == '选择题：只允许选择一个答案'"><t t-call="survey.simple_choice"/></t>
            <t t-if="question.type_id.name == '多选：允许选择多个答案'"><t t-call="survey.multiple_choice"/></t>
            <t t-if="question.type_id.name == '矩阵'"><t t-call="survey.matrix"/></t>
            <div class="js_errzone alert alert-danger" style="display:none;" role="alert"></div>
        </xpath>
    </template>

