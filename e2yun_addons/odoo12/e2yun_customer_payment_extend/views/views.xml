<odoo>
  <data>
    <record id="account_payment_form_view_extend" model="ir.ui.view">
            <field name="name">account.payment.form.view.extend</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='post']" position="after">
                    <button name="remake" class="oe_highlight" states="draft" string="重置" type="object"/>
                </xpath>
                <xpath expr="//group[1]/field[@name='journal_id']" position="after">

                    <field name="payment_type2"/>
                    <field name="bank_num" attrs="{'readonly': [('payment_type2', '=', 'company_cash')]}"/>
                    <field name="payment_voucher"/>
                    <field name="marketing_activity"/>

                </xpath>

                <xpath expr="//group[2]/field[@name='payment_date']" position="before">
                    <field name="company_id"/>
                    <field name="related_shop"/>
                    <field name="terminal_customer"/>
                    <field name="receipt_Num"/>
                    <field name="sales_num"/>
                    <field name="handing_cost"/>
                    <field name="handle_person"/>
                    <field name="po_num"/>
                    <field name="customer_po"/>
                </xpath>

                <xpath expr="//group" position="after">
                    <notebook>
                        <page string="付款附件">
                            <field name="payment_attachments" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </page>
                    </notebook>
                </xpath>
            </field>
    </record>
  </data>
</odoo>