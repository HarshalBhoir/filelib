      <record id="account_payment_form_view_extend" model="ir.ui.view">
            <field name="name">account.payment.form.view.extend</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='post']" position="after">
                    <button name="remake" class="oe_highlight" states="draft" string="重置" type="object"/>
                    <button name="sync_customer_payment_to_pos" class="oe_highlight" string="同步POS" type="object"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="context">{'default_is_company': True, 'default_supplier': payment_type == 'outbound', 'default_customer': payment_type == 'inbound', 'show_custom_name': 8}</attribute>
                </xpath>
                <xpath expr="//group[1]/field[@name='journal_id']" position="after">

                    <field name="payment_type2" widget="e2yun_customer_payment_extend_hide_options"/>
                    <field name="payment_voucher" attrs="{'required': [('payment_type2','in',['C11','C12','C14','C15','C16'])]}"/>
                    <field name="marketing_activity"/>
                    <field name="payment_serirs_no" invisible="1"/>
                    <field name="payment_status"/>
                    <field name="handing_cost" attrs="{'required': [('payment_type2', 'in', ['D12','D13','D14','D15','D16','D17','C12','C15','C16'])]}"/>
                    <field name="customer_pay_amount" attrs="{'invisible': [('customer_pay_amount000', '=', False)]}"/>
                    <field name="accept_amount" attrs="{'invisible': [('accept_amount000', '=', False)]}"/>
                    <field name="customer_pay_amount000" invisible="1"/>
                    <field name="accept_amount000" invisible="1"/>
                </xpath>

                <xpath expr="//group[2]/field[@name='payment_date']" position="before">
                    <field name="company_id"/>
                    <field name="related_shop" context="{'show_custom_name': 1}"/>
                    <field name="create_uid"/>
                    <field name="receipt_Num"/>
                    <field name="sales_num"/>
                    <field name="po_num" attrs="{'required': [('payment_type2', 'in', ['C11','C12','C14','C15','C16'])]}"/>
                    <field name="customer_po"/>
                    <field name="bank_num" context="{'show_bank_name': 1}" attrs="{'invisible': [('payment_type2', '=', 'D11')],
                                                   'required': [('payment_type2', 'in', ['D12','D13','D14','D15','D16','D17','C11','C12','C14','C15','C16','G12','C13'])]}"/>
                </xpath>

                <xpath expr="//group" position="after">
                    <notebook>
                        <page string="付款附件">
                            <field name="payment_attachments" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </page>
                    </notebook>
                </xpath>
            </field>
    </record>

      <record id="website_new_attachment_form_inherit" model="ir.ui.view">
            <field name="name">website.new.attachment.form.inherit</field>
            <field name="model">ir.attachment</field>
            <field name="inherit_id" ref="website.view_attachment_form_inherit_website"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
      </record>
  </data>
</odoo>