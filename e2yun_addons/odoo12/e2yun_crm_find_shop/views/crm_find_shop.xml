        <record model="ir.ui.view" id="crm_shopfind_kanban_view">
            <field name="name">shop.find.kanban</field>
            <field name="model">crm.team</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_salesteam_kanban" create="0">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="member_ids"/>
                    <field name="color"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="tel"/>
                    <field name="address"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click" style="height: 120px">
                                <div class="o_kanban_image">
                                    <img class="o_kanban_image_inner_pic" t-att-src="kanban_image('crm.team', 'image_medium', record.id.raw_value)"
                                    width="120px"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>

                                    <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                    <ul>
                                        <li ><field name="street"/></li>
                                        <li ><field name="address"/></li>
                                        <li ><field name="tel"/></li>
                                    </ul>
                                </div>
                                <div class="float-right">
                                        <button name="button_navigation" type="object" class="btn btn-primary">Go</button>
                                </div>

                            </div>

                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="crm_team_salesteams_act" model="ir.actions.act_window">
            <field name="name">Team Pipelines</field>
            <field name="res_model">crm.team</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
            <field name="context">{'search_default_my_favorites': 1}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'sequence': '2', 'view_mode': 'kanban', 'view_id': ref('crm_shopfind_kanban_view')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define a new Sales Team
                </p>
                <p>
                    Use Sales Teams to organize your sales departments.
                    Each channel will work with a separate pipeline.
                </p>
            </field>
        </record>

        <menuitem id="crm_salesteam_menu_findshop"
                  name="门店查询"
                  parent="crm.crm_menu_sales"
                  action="crm_team_salesteams_act"
                  sequence="2"/>

    </data>
</odoo>