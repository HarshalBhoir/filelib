        <!--filter-->

        <record id="ck_operation_productivity_rep_filter" model="ir.ui.view">
            <field name="name">ck.operation.productivity.rep.select</field>
            <field name="model">ck.operation.productivity.rep</field>
            <field name="arch" type="xml">
                <search string="Search Operation Productivity">
                    <field name="froutingname"/>
                    <field name="fopername"/>
                    <field name="gqty"/>
                    <field name="sqty"/>
                    <field name="rqty"/>
                    <field name="date_ascription"/>
                    <filter string="当天记录" name="today_content" domain="[('date_ascription','=',current_date)]"/>
                    <filter string="当月记录" name="current_month_content" domain="[('date_ascription','like', datetime.datetime.now().strftime('%Y-%m'))]" />
                    <group expand="0" string="Group By">
                        <filter string="日期" name="by_date" domain="[]" context="{'group_by':'date_ascription'}"/>
                        <filter string="按工序（当日）" name="by_operation_current_date" domain="[('date_ascription','=',current_date)]" context="{'group_by':'fopername'}"/>
                        <filter string="按工序（当月）" name="by_operation_current_month" domain="[('date_ascription','like', datetime.datetime.now().strftime('%Y-%m'))]" context="{'group_by':'fopername'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="ck_daily_income_rep_filter" model="ir.ui.view">
            <field name="name">ck.daily.income.rep.select</field>
            <field name="model">ck.daily.income.rep</field>
