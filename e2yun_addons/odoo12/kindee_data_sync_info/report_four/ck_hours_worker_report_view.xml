                    <filter string="当天记录" name="today_content" domain="[('date_ascription','=',current_date)]"/>
                    <filter string="当月记录" name="current_month" domain="[('date_ascription','like', datetime.datetime.now().strftime('%Y-%m'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="按工单（当日）" name="by_icmo_current_date" domain="[('date_ascription','=',current_date)]" context="{'group_by':'name'}"/>
                        <filter string="按工单（当月）" name="by_icmo_current_month" domain="[('date_ascription','like', datetime.datetime.now().strftime('%Y-%m'))]" context="{'group_by':'name'}"/>
                        <filter string="按产品线" name="by_froutingname" domain="[]" context="{'group_by':'froutingname'}"/>
                        <filter string="按工序" name="by_fopername" domain="[]" context="{'group_by':'fopername'}"/>
                    </group>
                </search>
            </field>
        </record>

