<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_outbound_query_report" model="ir.ui.view">
            <field name="name">Outbound Query Report</field>
            <field name="model">outbound.final</field>
            <field name="arch" type="xml">
                <form string="Choose your data">
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="werks"/>
                            <field name="werks_id" invisible="1"/>
                            <field name="vtweg"/>
                            <field name="ywy"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                            <field name="vkorgtext"/>
                            <field name="kunnr"/>
                        </group>
                    </group>
                    <footer>
                        <button name="open_table" string="查询" type="object"  class="oe_highlight"  />
                    </footer>
                </form>
            </field>
        </record>
        <record id="outbound_report_query_action" model="ir.actions.act_window">
            <field name="name">出库报表查询</field>
            <field name="res_model">outbound.final</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_outbound_query_report"/>
            <field name="target">new</field>
        </record>

        <record id="outbound_query_tree" model="ir.ui.view">
            <field name="name">outbound.query.report.tree</field>
            <field name="model">outbound.final</field>
            <field name="arch" type="xml">
                <tree string="Move Lines" create="false" delete="false" editable="bottom">
                    <field string="日期" name="LFADT"/>
                    <field string="工厂" name="werks"/>
                    <field string="事业部" name="vkorgtext"/>
                    <field string="分销渠道" name="vtweg"/>
                    <field string="导购员" name="ywy"/>
                    <field string="门店" name="kunnr"/>
                    <field string="结算小计" name="jiesuanjine"/>
                    <field string="销售小计" name="xiaoshoujine"/>
                </tree>
            </field>
        </record>

        <menuitem id="outbound_report_menu"
        parent="crm.crm_menu_report"
        action="outbound_report_query_action"
        sequence="18"
        />

    </data>
</odoo>