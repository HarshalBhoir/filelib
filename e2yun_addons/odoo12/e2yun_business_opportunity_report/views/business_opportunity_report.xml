         <field name="view_type">form</field>
         <field name="view_mode">tree,kanban,pivot,graph,activity</field>
         <field name="domain">[]</field>
         <field name="context">{}</field>
     </record>

       <menuitem name="OpportunityContractStatement" id="menu_report_crm_business_opportunity_tree"
