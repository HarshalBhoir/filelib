<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_hhjc_extends" model="ir.ui.view">
            <field name="name">sale.order.form.hhjc.extends</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_unlock']" position="after">
                    <button name="action_sync_pos_sale_order" type="object" string="同步pos订单信息"/>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="saleorderid"></field>
                    <field name="customerno"></field>
                    <field name="customername"></field>
                    <field name="werksname"></field>
                    <field name="telephone_pos"></field>
                    <field name="address_pos"></field>
                    <field name="sale_man"></field>
                    <field name="corporate_designer"></field>
                    <field name="delivery_date"></field>
                    <field name="customer_po"></field>
                    <field name="contract_no"></field>
                    <field name="order_reason"></field>
                    <field name="lift"></field>
                    <field name="delivery_upstairs"></field>
                    <field name="headman"></field>
                    <field name="designer"></field>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="settlement_amount"></field>
                    <field name="reduction_price1"></field>
                    <field name="reduction_price2"></field>
                    <field name="vkorg"></field>
                    <field name="branch"></field>
                    <field name="factory"></field>
                    <field name="actual_amount"></field>
                    <field name="remark_pos"></field>
                    <field name="order_state"></field>
                    <field name="categories_of_stores"></field>
                    <field name="order_date"></field>
                    <field name="pricing_date"></field>
                    <field name="order_type"></field>
                    <field name="create_man_pos"></field>
                    <field name="create_date_pos"></field>
                    <field name="last_update_date_pos"></field>
                    <field name="update_man_pos"></field>
                    <field name="amount_pos"></field>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='sequence']" position="after">
                    <field name="item_number"></field>
                    <field name="product_no"></field>
                    <field name="product_name"></field>
                    <field name="item_type"></field>
                    <field name="sale_quantity"></field>
                    <field name="batch_no"></field>
                    <field name="sale_amount"></field>
                    <field name="settlement_amount"></field>
                    <field name="sale_subtotal"></field>
                    <field name="settlement_subtotal"></field>
                    <field name="actual_cost"></field>
                    <field name="cost_receivable"></field>
                    <field name="reduction_price1"></field>
                    <field name="reduction_price2"></field>
                    <field name="return_reason"></field>
                    <field name="factory_contract_number"></field>
                    <field name="factory"></field>
                    <field name="store"></field>
                    <field name="freezing_reason"></field>
                    <field name="if_close"></field>
                    <field name="if_third_party"></field>
                    <field name="if_processing"></field>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
